{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/AdoPetsBKD/AdoPetsBKD.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/AdoPetsBKD/AdoPetsBKD.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/AdoPetsBKD/AdoPetsBKD.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "ef-add-migration",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migrationName}",
        "--project",
        "${workspaceFolder}/AdoPetsBKD/AdoPetsBKD.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "ef-update-database",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "${workspaceFolder}/AdoPetsBKD/AdoPetsBKD.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "ef-remove-migration",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "remove",
        "--project",
        "${workspaceFolder}/AdoPetsBKD/AdoPetsBKD.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Nombre de la migración",
      "default": "InitialCreate"
    }
  ]
}
